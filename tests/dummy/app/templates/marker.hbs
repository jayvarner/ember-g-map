<h2>Animation: Bounce Baby</h2>
<article>
  <p>
    You can pass <code>DROP</code> or <code>BOUNCE</code>. <code>DROP</code> will drop the marker on the map once. <code>BOUNCE</code> continuously bounces the marker like below.
  </p>
</article>
{{#uk-switcher animation='uk-animation-fade' as |switcher|}}
  {{#switcher.nav type='tab' as |nav|}}
    {{! nav.component is either a uk-tab or a uk-subnav component }}
    {{#nav.component as |tab|}}
      {{#tab.item}}Result{{/tab.item}}
      {{#tab.item}}Javascript{{/tab.item}}
      {{#tab.item}}Template{{/tab.item}}
    {{/nav.component}}
  {{/switcher.nav}}

  {{#switcher.content as |content|}}
    {{#content.item}}
      {{!-- BEGIN-SNIPPET marker2 --}}
  {{#g-map as |features|}}

    {{#features.marker
      lat=33.689247
      lng=-84.457332
      zoom=12
      title='Headland and Delowe'
      animation='BOUNCE' as |marker|}}
      {{#marker.infowindow}}
        <p><i>We're bouncing</i></p>
      {{/marker.infowindow}}
    {{/features.marker}}
  {{/g-map}}
  {{!-- END-SNIPPET --}}
    {{/content.item}}

    {{#content.item}}
      <h5>Content 2</h5>
    {{/content.item}}

    {{#content.item}}
      {{code-snippet name='marker2.hbs'}}
    {{/content.item}}
  {{/switcher.content}}
{{/uk-switcher}}

