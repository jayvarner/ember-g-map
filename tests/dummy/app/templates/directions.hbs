
{{#uk-switcher animation='uk-animation-fade' as |switcher|}}
  {{#switcher.nav type='tab' as |nav|}}
    {{#nav.component as |tab|}}
      {{#tab.item}}Result{{/tab.item}}
      {{#tab.item}}Javascript{{/tab.item}}
      {{#tab.item}}Template{{/tab.item}}
    {{/nav.component}}
  {{/switcher.nav}}

  {{#switcher.content as |content|}}
    {{#content.item}}
    Select Travel Moded: {{g-map-select-travel-mode travelMode=travelMode}}
    {{#if geoLocation.clientLat}}
    {{!-- BEGIN-SNIPPET directions --}}
    {{#g-map as |feature|}}
      {{feature.directions
        origin=(
          hash
            lat=geoLocation.clientLat
            lng=geoLocation.clientLng
        )
        destination=(
          hash
            lat=33.75432
            lng=-84.38979
        )
        travelMode=travelMode}}
    {{/g-map}}
    {{! Div to hold the turn-by-turn directions}}
    <div id='directions-panel' />
    {{!-- END-SNIPPET --}}
    {{/if}}
    {{/content.item}}

    {{#content.item}}
      {{code-snippet name='directions-controller.js'}}
    {{/content.item}}

    {{#content.item}}
      {{code-snippet name='directions.hbs'}}
    {{/content.item}}
  {{/switcher.content}}
{{/uk-switcher}}
